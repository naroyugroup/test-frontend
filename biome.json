{
	"$schema": "https://biomejs.dev/schemas/1.6.1/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"correctness": {
				"noUnusedImports": "error"
			},
			"a11y": {
				"useKeyWithClickEvents": "off"
			}
		}
	},
	"json": {
		"parser": {
			"allowComments": true
		}
	},
	"formatter": {
		"enabled": true,
		"lineWidth": 80
	}
}
